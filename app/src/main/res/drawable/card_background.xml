<!-- res/drawable/card_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#4A148C"
                android:startColor="#6A1B9A" />
        </shape>
    </item>

    <!-- Polygon Pattern as a Shape -->
    <item>
        <shape>
            <solid android:color="#4A148C" />
            <path
                android:fillColor="#6A1B9A"
                android:pathData="M0,50 L50,0 L100,50 L50,100 Z" />
        </shape>
    </item>

    <!-- Another Polygon Overlay -->
    <item>
        <shape>
            <solid android:color="#4A148C" />
            <path
                android:fillColor="#7B1FA2"
                android:pathData="M25,0 L75,0 L100,25 L75,50 L25,50 L0,25 Z" />
        </shape>
    </item>

</layer-list>
